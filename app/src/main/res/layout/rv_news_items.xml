<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8dp"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNews"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_image_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_12dp"
            app:layout_constraintTop_toBottomOf="@+id/ivNews">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/color_desc_title"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_16sp"
                tools:text="Congrats! You are featured on Home page as a recommended seller. Then checking further with really really long line" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="@dimen/text_size_14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/color_desc_title"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_4dp"
                tools:text="Hi rita 12399, thank you for being awesome on Carousell! We want more Carousellers see you then test further with really really lo"
                />

            <TextView
                android:id="@+id/tvTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5 hours ago"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textColor="@color/color_grey_timestamp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/text_small_14sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
